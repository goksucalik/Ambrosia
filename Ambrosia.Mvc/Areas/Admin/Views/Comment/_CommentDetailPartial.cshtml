@model Ambrosia.Entities.Dtos.CommentDto
<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Model.Comment.Id Numaralı Yorum Görüntüleniyor...</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="İptal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Model.Comment.Text
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-block" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>